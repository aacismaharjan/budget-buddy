<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="https://jakarta.ee/xml/ns/jakartaee" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd" id="WebApp_ID" version="6.0">
  <display-name>budget-buddy</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.jsp</welcome-file>
    <welcome-file>default.htm</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.budgetbuddy.RegisterServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.budgetbuddy.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CreateAccountServlet</servlet-name>
    <servlet-class>com.budgetbuddy.CreateAccountServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreateAccountServlet</servlet-name>
    <url-pattern>/createAccount</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>TransactionServlet</servlet-name>
    <servlet-class>com.budgetbuddy.TransactionServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TransactionServlet</servlet-name>
    <url-pattern>/addTransaction</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>LogoutServlet</servlet-name>
    <servlet-class>com.budgetbuddy.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LogoutServlet</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>AddGoalServlet</servlet-name>
    <servlet-class>com.budgetbuddy.AddGoalServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddGoalServlet</servlet-name>
    <url-pattern>/addGoal</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>TransferMoneyServlet</servlet-name>
    <servlet-class>com.budgetbuddy.TransferMoneyServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>TransferMoneyServlet</servlet-name>
    <url-pattern>/transferMoney</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>SessionFilter</filter-name>
    <filter-class>com.budgetbuddy.SessionFilter</filter-class>
    <init-param>
      <param-name>includedUrls</param-name>
      <param-value>/budget-buddy/dashboard.jsp, /budget-buddy/accountCreation.jsp, /budget-buddy/accountShow.jsp, /budget-buddy/transaction.jsp, /budget-buddy/transactionShow.jsp, /budget-buddy/listGoal.jsp, /budget-buddy/transferMoney.jsp</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>SessionFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>